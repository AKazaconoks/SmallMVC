<form id="addPersonForm">
    <div class="modal-header">
        <h5 class="modal-title" id="addPersonModalLabel">Add Person</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" required>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control" id="LastName" name="LastName" required>
        </div>
        <div class="form-group">
            <label for="BirthDate">Birth Date</label>
            <input type="date" class="form-control" id="BirthDate" name="BirthDate" required>
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone Number:</label>
            <div class="input-group">
                <input type="text" class="form-control phone-number" name="PhoneNumbers"/>
                <div class="input-group-append">
                    <button type="button" class="btn btn-success add-phone-number-btn">+</button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <div class="input-group">
                <input type="text" class="form-control address" name="Addresses"/>
                <div class="input-group-append">
                    <button type="button" class="btn btn-success add-address-btn">+</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" data-dismiss="modal">Save</button>
    </div>
    <input type="hidden" id="selectedSpouseId" name="SelectedSpouseId" value="">
    <input type="hidden" id="personId" name="PersonId" value="@Model.Id" />
</form>
<script>
    $("body").on("click", ".add-phone-number-btn", function () {
        var newPhoneNumberField = $('<div class="input-group mt-2"><input type="text" class="form-control phone-number" name="PhoneNumbers" /><div class="input-group-append"><button type="button" class="btn btn-danger remove-phone-number-btn">-</button></div></div>');
        $(this).closest(".form-group").append(newPhoneNumberField);
    });
    
    $("body").on("click", ".remove-phone-number-btn", function () {
        $(this).closest(".input-group").remove();
    });
    
    $("body").on("click", ".add-address-btn", function () {
        var newAddressField = $('<div class="input-group mt-2"><input type="text" class="form-control address" name="Addresses" /><div class="input-group-append"><button type="button" class="btn btn-danger remove-address-btn">-</button></div></div>');
        $(this).closest(".form-group").append(newAddressField);
    });
    
    $("body").on("click", ".remove-address-btn", function () {
        $(this).closest(".input-group").remove();
    });
</script>